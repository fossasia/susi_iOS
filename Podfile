# Uncomment the next line to define a global platform for your project
platform :ios, '10.0'

def shared_pods
  pod 'Alamofire', '~> 4.4'
end

target 'Susi' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Susi
  pod 'Material'
  pod 'Toast-Swift', '~> 2.0.0'
  pod 'Popover'
  pod 'SwiftValidators'
  pod 'RSKGrowingTextView'
  pod 'RSKPlaceholderTextView', '2.0.0'
  pod 'BouncyLayout'
  pod 'DLRadioButton', '~> 1.4'
  pod 'RealmSwift'
  pod 'ReadabilityKit'
  pod 'Kingfisher'
  pod 'SwiftDate', '~> 4.0'
  pod 'NVActivityIndicatorView'
  pod 'Fakery'
  shared_pods
end

target 'SusiUITests' do
  use_frameworks!
  
  pod 'Fakery'
  shared_pods
end
